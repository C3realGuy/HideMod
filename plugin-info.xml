<?xml version="1.0" standalone="yes" ?>
<plugin id="CerealGuy:Hide">
	<name>HideModv2</name>
	<author>CerealGuy</author>
	<description>Enable [hide] and [hide-reply] bbcodes.</description>
	<version>2.0</version>
	<settings>
		<setting name="hidemod_hide_locked" default="&lt;div class=&quot;bbc_hide bbc_hide_closed&quot;&gt;&lt;div class=&quot;bbc_hide_header&quot;&gt;{{hide_hidden_content}}&lt;/div&gt;&lt;div class=&quot;bbc_hide_content&quot;&gt;{{hide_like_to_see}}&lt;/div&gt;&lt;/div&gt;" /> <!-- locked hide -->
		<setting name="hidemod_hide_unlocked_before" default="&lt;div class=&quot;bbc_hide bbc_hide_open&quot;&gt;&lt;div class=&quot;bbc_hide_header&quot;&gt;{{hide_hidden_content}}&lt;/div&gt;&lt;div class=&quot;bbc_hide_content&quot;&gt;" /> <!-- unlocked hide before -->
		<setting name="hidemod_hide_unlocked_after" default="&lt;/div&gt;&lt;/div&gt;" /> <!-- unlocked hide after -->
		<setting name="hidemod_hide_reply_locked" default="&lt;div class=&quot;bbc_hide bbc_hide_closed&quot;&gt;&lt;div class=&quot;bbc_hide_header&quot;&gt;{{hide_hidden_content}}&lt;/div&gt;&lt;div class=&quot;bbc_hide_content&quot;&gt;{{hide_reply_to_see}}&lt;/div&gt;&lt;/div&gt;" /> <!-- locked hide-reply -->
		<setting name="hidemod_hide_reply_unlocked_before" default="&lt;div class=&quot;bbc_hide bbc_hide_open&quot;&gt;&lt;div class=&quot;bbc_hide_header&quot;&gt;{{hide_hidden_content}}&lt;/div&gt;&lt;div class=&quot;bbc_hide_content&quot;&gt;" /> <!-- unlocked hide-reply before -->
		<setting name="hidemod_hide_reply_unlocked_after" default="&lt;/div&gt;&lt;/div&gt;" /> <!-- unlocked hide-reply after -->
		<setting name="hidemod_hide_locked_quote" default="{{hide_quote_like_to_see}}" /> <!-- quote like msg -->
		<setting name="hidemod_hide_reply_locked_quote" default="{{hide_quote_reply_to_see}}" /> <!-- quote reply msg -->
		<!--<setting name="hidemod_disabled_boards" default="" />-->
	</settings>
	<settings-page area="hidemod">
		<language file="lang/ManageHide" />
		<text name="hidemod_hide_locked" />
		<text name="hidemod_hide_unlocked_before" />
		<text name="hidemod_hide_unlocked_after" />
		<hr />
		<text name="hidemod_hide_reply_locked" />
		<text name="hidemod_hide_reply_unlocked_before" />
		<text name="hidemod_hide_reply_unlocked_after" />
		<hr />
		<text name="hidemod_hide_locked_quote" />
		<text name="hidemod_hide_reply_locked_quote" />
		<hr />
		<!--<boards name="hidemod_disabled_boards" />-->
	</settings-page>
	<acp-url>action=admin;area=hidemod</acp-url>
	<newperms filename="lang/Hide-Permissions">
		<groups>
			<group type="membergroup" name="hide_group" />
		</groups>
		<permissionlist>
			<permission type="membergroup" name="hide_see_through" ownany="false" group="hide_group"/>
		</permissionlist>
	</newperms>
  <bbcodes>
    <bbcode tag="hide" type="unparsed_content" block-level="no">
      <content>HIDDEN CONTENT: Like to see</content>
			<process file="src/Hide" function="bbc_validate_hide_bbc" />
    </bbcode>
    <bbcode tag="hide-reply" type="unparsed_content" block-level="no">
      <content>HIDDEN CONTENT: Reply to see</content>
			<process file="src/Hide" function="bbc_validate_hide_reply_bbc" />
    </bbcode>
  </bbcodes>
</plugin>
